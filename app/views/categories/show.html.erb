<p id="notice"><%= notice %></p>

<h2>
  <%= @category.name %>
</h2>

<p>
  <%= @category.desc %>
</p>

<h3> Listings in this category </h3>
<div class="row">
  <% Item.where(category_id: @category.id).each do |item| %>
    <%= render 'items/item-card', item: item %>
  <% end %>
</div>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
