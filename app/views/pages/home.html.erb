
<div class="row">

  <% @items.each do |item| %>

    <div class="col-md-4 col-sm-6">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to item.title, item %></h5>
          <p class="card-text"><%= truncate(item.description, length: 100) %></p>
          <%= link_to 'View', item, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

  <% end %>

</div>
