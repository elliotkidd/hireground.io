<p id="notice"><%= notice %></p>

<h2>
  <%= @item.title %>
</h2>

<p>
  <%= simple_format(@item.description) %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@item.picture_url, width: 600) if @item.picture.present? %>
</p>

<%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary btn-sm' %>
<%= link_to 'Back', items_path, class: 'btn btn-secondary btn-sm' %>
