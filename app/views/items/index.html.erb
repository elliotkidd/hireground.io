<% if notice.present? %>
  <p class="alert alert-primary" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag(item.image_url :thumb) if item.image.present? %></td>
        <td><%= item.title %></td>
        <td><%= truncate(item.description, length: 100) %></td>
        <td><%= link_to Category.find(item.category_id).name, category_path(item.category_id) %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
