<div class="row justify-content-center">
  <div class="col-md-6">

    <%= form_with(model: item, local: true) do |form| %>
      <% if item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :item_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :picture, id: :idea_picture, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :item_description, class: 'form-control' %>
      </div>



      <div class="form-group">
        <%= form.submit "List item", class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
