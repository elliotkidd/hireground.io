<div class="row justify-content-center">
  <div class="col-md-6">

    <%= form_with(model: item, local: true) do |f| %>
      <% if item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select one!') %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, id: :item_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: 'form-control' %>
        <% if f.object.image? %>
          <%= image_tag f.object.image.thumb.url %>
          <%= f.label :remove_image %>
          <%= f.check_box :remove_image %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, id: :item_description, class: 'form-control' %>
      </div>



      <div class="form-group">
        <%= f.submit "List item", class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
